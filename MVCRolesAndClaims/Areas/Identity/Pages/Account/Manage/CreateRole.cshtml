@page
@using MVCRolesAndClaims.Areas.Identity.ViewModels;
@model CreateRoleModel

@{
    ViewData["Title"] = "Create Role";
}

<h1>Create new role</h1>

<div class="row">
    <div class="col-md-12">
        <form id="roleform" method="post" >
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreateRoleViewModel.RoleName"></label>
        <input asp-for="CreateRoleViewModel.RoleName" class="form-control" />
        <span asp-validation-for="CreateRoleViewModel.RoleName" class="text-danger"></span>
            </div>
            <button style="width:auto" type="submit" class="btn btn-primary">Create Role</button>
        </form>
    </div>
</div>